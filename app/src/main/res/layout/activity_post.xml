<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="com.ninjageeksco.socialnetwork.PostActivity">

    <include
        android:id="@+id/post_back_app_bar"
        layout="@layout/app_bar_layout" />

    <ImageButton
        android:id="@+id/post_activity_add_pic"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/post_back_app_bar"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/select_image"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="47dp" />

    <EditText
        android:id="@+id/post_activity_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/post_activity_add_pic"
        android:layout_margin="4dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:hint="Write Something Here."
        android:inputType="textPersonName"
        android:padding="15dp" />

    <Button
        android:id="@+id/post_activity_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_activity_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/button"
        android:padding="20dp"
        android:text="Update Post"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>
